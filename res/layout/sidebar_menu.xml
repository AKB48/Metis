<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    
    <LinearLayout 
         android:id="@+id/menu_myevents"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center|left"
         android:background="@drawable/on_01"
         >
         <TextView 
             android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="        我的活动"
         	android:textSize="15sp" 
         	android:textColor="#ffffff"/> 
       </LinearLayout>
       
    <LinearLayout 
         android:id="@+id/menu_relativeevents"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center|left"
         android:background="@drawable/off_02"
         >
         <TextView 
             android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="        有关活动"
         	android:textSize="15sp" 
         	android:textColor="#ffffff"/> 
       </LinearLayout>

    <LinearLayout 
         android:id="@+id/menu_recommendedevents"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center|left"
         android:background="@drawable/off_03"
         >
         <TextView 
             android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="        推荐活动"
         	android:textSize="15sp" 
         	android:textColor="#ffffff"/> 
       </LinearLayout>
       
    <LinearLayout 
         android:id="@+id/menu_friendscenter"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center|left"
         android:background="@drawable/off_04"
         >
         <TextView 
             android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="        好友中心"
         	android:textSize="15sp" 
         	android:textColor="#ffffff"/> 
       </LinearLayout>
       
    <LinearLayout 
         android:id="@+id/menu_update"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center|left"
         android:background="@drawable/off_05"
         >
         <TextView 
             android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="        版本更新"
         	android:textSize="15sp" 
         	android:textColor="#ffffff"/> 
       </LinearLayout>
       
    <LinearLayout 
         android:id="@+id/menu_settings"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center|left"
         android:background="@drawable/off_06"
         >
         <TextView 
             android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="        程序设置"
         	android:textSize="15sp" 
         	android:textColor="#ffffff"/> 
       </LinearLayout>
       
    <LinearLayout 
         android:id="@+id/menu_exit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center|left"
         android:background="@drawable/off_07"
         >
         <TextView 
             android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="        退出程序"
         	android:textSize="15sp" 
         	android:textColor="#ffffff"/> 
       </LinearLayout>
    

</LinearLayout>
